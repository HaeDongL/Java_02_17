package jp03.par03;


import java.io.*;

/*
 * FileName: FileReaderTest01
 */

public class FileReaderTest {

	///main method
	public static void main(String[] args) {
		//File을 읽어 들이는 Stream 선언
		FileReader fr = null;
		FileWriter wr = System.out;
		//read()수 count위한 변수
		int readCount=0;
		
		try {
			fr = new FileReader("C:\\workspace\\01PJT\\src\\jp03\\par03\\FileReaderTest.java");
			
			while(true) {
				int i = fr.read();
				if(i==-1) {//i= -1의 의미는 ==> API확인할것.
					break;
				}
				
//				char c = (char)i;
//				System.out.print(c);
//				
//				readCount++;
				
				wr.write(i);
				wr.flush();
				
			}
			
		}catch(FileNotFoundException e) {
			e.printStackTrace();
		}catch(IOException e1) {
			e1.printStackTrace();
		}finally {
			System.out.println("\n\n================================");
			System.out.println("=========>>> read 횟수 readCount : "+readCount);
			System.out.println("====================================");
			try {
				fr.close();
			}catch(Exception e) {
				e.printStackTrace();
			}
		}

	}

}
