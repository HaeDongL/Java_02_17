//=============================================//
1.DML::UPDATE:TABLE RECORD 수정

/////////////////////////////////////////////////
//==> SCOTT id 2 확인
SELECT*FROM emp_test;

//==> SCOTT id 2 ==> 7변경
UPDATE emp_test
SET id = 7
WHERE name = 'SCOTT';

//==> SCOTT id 2 ==> 7 변경확인
SELECT*FROM emp_test;

//==>
ROLLBACK
//////////////////////////////////////////////////
//==> SCOTT id 2 ==> 7 로 변경 후 COMMIT
UPDATE emp_test
SET id = 7
WHERE name = 'SCOTT';

SELECT*FROM emp_test;

COMMIT;
///////////////////////////////////////////////////

//=============================================//
//==>영업부 ==> rhksflqnfh qusrud

UPDATE emp_test
SET dept_name = '관리부'
WHERE dept_name = '영업부';

SELECT*FROM emp_test;
COMMIT;


//=============================================//
//==> 홍길순 ::사장/2000/영업팁::변경

//=============================================//
//==> 월급 1500 이상인 직원 dept_name '대기발령' 변경

//=============================================//
//==>전직원 직급 '평사원'변경 ==> 변경 후 ROLLBACK
//==>WHERE절이 없다면 ??? ==> 전체 적용

//=============================================//
//==> 전직원 임금인상 500		==> 변경 후 COMMIT
//==> WHERE 절이 없다면 ???		==> 전체 적용
//==> 힌트 :: int i = 10; i = i + 5;