//=============================================//
#QUERY :: SELECT : 기타 KEYWARD를 이용 검색, 조회
//=============================================//
1.KEYWORD :: || CONCATENATION(COLUMN 합성)

//==> || 사용 	홍길동대리 형식검색
SELECT
name||title
FROM emp_test;


//==> || 사용 홍길동 대리 형식검색
SELECT
name||' '||title
FROM emp_test;

//=============================================//
2.KEYWORD :: DISTINCT 중복된 행들 제거

//==> dept_name(부서)조회
SELECT dept_name 부서 FROM emp_test;

//==> 중복 행 제거 검색결과 ?
SELECT
DISTINCT dept_name 부서명
FROM emp_test; 