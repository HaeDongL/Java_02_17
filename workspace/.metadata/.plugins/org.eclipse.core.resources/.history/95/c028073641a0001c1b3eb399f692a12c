SELECT
d.department_name 부서명, e.first_name 이름, e.salary 금여, e.commission_pct 커미션
FROM employees e, departments d
WHERE e.department_id = d.department_id
AND e.commission_pct >= (SELECT
						e1.commission_pct
						FROM employees e1, departments d1, (SELECT
															e2.commission_pct vee
															FROM employees e2, departments d2
															WHERE e2.department_id = d2.department_id
															AND e1.commission_pct IS NOT NULL
															ORDER BY e2.commission_pct) ve
						WHERE e1.department_id = d1.department_id
						AND e1.commission_pct IS NOT NULL
						AND rownum <= 4;
						);